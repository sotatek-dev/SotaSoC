# sw t0, 4(t1)       # Store 0x2 to address 0x40000004 (control register)
00532223

# loop:
# lw t0, 4(t1)       # Load word from 0x40000004 (read status)
00432283

# andi t0, t0, 0x1   # Check bit 0 (busy bit)
0012f293

# bnez t0, loop      # If bit 0 is 1, branch back to loop
